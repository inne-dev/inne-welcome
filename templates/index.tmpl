<!-- templates/index.tmpl -->
<!DOCTYPE html>
<html lang="{{ .Lang }}">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ .Title }}</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <!-- Переключатель языка -->
        <div class="language-switcher">
            <button class="language-button" aria-label="Language switcher" aria-expanded="false" aria-controls="language-menu">
                <img src="/icons/language.svg" alt="">
            </button>
            <div id="language-menu" class="language-menu">
                {{ range .Supported }}
                <a href="/{{ . }}" class="language-option {{ if eq . $.Lang }}active{{ end }}">
                    {{ if eq . "en" }}English{{ end }}
                    {{ if eq . "ru" }}Русский{{ end }}
                    {{ if eq . "uk" }}Українська{{ end }}
                </a>
                {{ end }}
            </div>
        </div>

        <div class="description">
            <h1>{{ .Title }}</h1>
            <p>{{ .Desc }}</p>
            <a class="link-button" href="{{ .BlogURL }}">{{ .Button }}</a>
        </div>
    </div>
    <script>
        document.querySelector('.language-button').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('language-menu').classList.toggle('visible');
        });
        // Закрываем меню при клике вне области
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.language-switcher')) {
                document.getElementById('language-menu').classList.remove('visible');
            }
        });
    </script>
</body>
</html>
